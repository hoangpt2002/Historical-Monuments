<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("layout/head") %> 
    <title>Geographical</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <link rel="stylesheet" href="css/geographical.css">
</head>
<body>
    <%- include("layout/header") %> 
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="news">
                    <div class="full-news">
                        <div class="row">
                            <div class="col-md-6 pr-0">
                                <div class="main-news">
                                    <div class="image-main-news">
                                        <img src="https://cacnuoc.vn/wp-content/uploads/2019/08/tuong-christ-the-redeemer-brazil-1024x768.jpeg">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 pl-0">
                                <div class="side-news">
                                    <div class="trending-post">
                                        <b>TRENDING POSTS</b>
                                    </div>
                                    <% for (let i = 0; i < 3; i++) { %> 
                                    <div class="sub-category">
                                        <div class="image-side-news">
                                            <a href="<%= data[i].Slug %>"><img src="<%= data[i].HinhAnh %>"alt=""></a>
                                        </div>
                                        <div class="content-side-news">
                                            <p style="color: #6351ce;">News</p>
                                            <h5><a href="<%= data[i].Slug %>"><%= data[i].TieuDe %></a></h5>
                                            <p><a href="<%= data[i].Slug %>">see more <i class="fas fa-arrow-circle-right"></i></a></p>
                                        </div>
                                    </div>
                                    <% } %> 
                                </div>
                            </div>
                        </div>
                    </div>
            
                    <div class="col-md-12">
                        <div class="seperate-footer">
                            <i class="fas fa-horizontal-rule"></i>
                            <i class="fas fa-horizontal-rule"></i>
                        </div>
            
                        <div class="trending-post-footer">
                            <b>TRENDING POSTS</b>
                        </div>
                        <div class="side-news-footer">
                            <div class="container-fluid">
                                <div class="row">
                                    <% for (let i = 0; i < 9; i++) { %>
                                    <div class="col-md-4">
                                        <div class="sub-category-footer">
                                            <div class="image-side-news-footer">
                                                <a href="<%= data[i].Slug %>">
                                                    <img src="<%= data[i].HinhAnh %>" alt=""></>
                                                </a>
                                            </div>
                                            <div class="content-side-news-footer">
                                                <p style="color: #6351ce;">News</p>
                                                <h5><a href="<%= data[i].Slug %>"><%= data[i].TieuDe %></a></h5>
                                                <p><a href="<%= data[i].Slug %>">see more <i class="fas fa-arrow-circle-right"></i></a></p>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include("layout/footer") %> 
</body>
</html>